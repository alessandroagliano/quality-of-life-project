const { default: axios } = require("axios");
import {
  nomeCittà,
  input,
  errorDiv,
  imgCity,
  description,
  totalScore,
  scoreDiv,
  cardBody,
} from "./dom-elements";

const correctName = function (cityName) {
  cityName = cityName.toLowerCase();
  cityName = cityName.replace(/\s+/g, "-");
  return cityName;
};
let slug;
const apiUrlScore = function () {
  slug = correctName(nomeCittà.value);
  return `https://api.teleport.org/api/urban_areas/slug:${slug}/scores/`;
};
const apiUrlImage = function () {
  slug = correctName(nomeCittà.value);
  return ` https://api.teleport.org/api/urban_areas/slug:${slug}/images/`;
};
